    }
    .formulario input,
    .formulario textarea,
    .formulario select,
    .formulario button {
      margin: 10px;
      padding: 10px;
      font-size: 1em;
      border-radius: 8px;
      border: none;
    }
    .formulario input,
    .formulario textarea {
      width: 300px;
    }
    .formulario button {
      background-color: #00c853;
      color: white;
