<body>
  <h1>Muro de los Buenos Deseos</h1>
  <h2>"INACAP haciendo comunidad"</h2>

  <div class="formulario">
    <input type="text" id="nombre" placeholder="Tu nombre" required>
    <textarea id="mensaje" placeholder="Tu mensaje..." rows="4" required></textarea>
    <select id="color">
      <option value="#f8bbd0">Rosa</option>
      <option value="#ffecb3">Amarillo</option>
      <option value="#b2dfdb">Aqua</option>
      <option value="#c5cae9">Lavanda</option>
      <option value="#dcedc8">Verde claro</option>
    </select>
    <button onclick="agregarDeseo()">Enviar Mensaje</button>
  </div>

  <div class="muro" id="muro"></div>

  <script>
    function agregarDeseo() {
      const nombre = document.getElementById('nombre').value;
      const mensaje = document.getElementById('mensaje').value;
      const color = document.getElementById('color').value;
      const fecha = new Date().toLocaleDateString();
      const rotacion = (Math.random() * 10 - 5).toFixed(2) + 'deg';

      if (nombre && mensaje) {
        const tarjeta = document.createElement('div');
        tarjeta.className = 'tarjeta';
        tarjeta.style.backgroundColor = color;
        tarjeta.style.setProperty('--rotation', rotacion);
        tarjeta.innerHTML = `
          <p><strong>${nombre}</strong></p>
          <p>${mensaje}</p>
          <p class="fecha">${fecha}</p>
        `;
        document.getElementById('muro').appendChild(tarjeta);

        // Limpiar campos
        document.getElementById('nombre').value = '';
        document.getElementById('mensaje').value = '';
      }
    }
  </script>
</body>
